<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:background="@color/gray">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.46"
            android:gravity="top"
            android:id="@+id/back"
            android:layout_margin="20sp"
            android:background="@drawable/ic_undo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:textColor="@color/white"
            android:text="Данные карты"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="top"
            android:id="@+id/change"
            android:layout_margin="15sp"
            android:background="@drawable/ic_baseline_more_vert_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/get_card_image"
        android:layout_margin="1sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#FFFFFF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/name_card"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2sp"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/time_add_card"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2sp"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/score_card"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2sp"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/time_last_use_card"/>
    </LinearLayout>
</LinearLayout>